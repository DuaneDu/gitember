<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import org.kordamp.ikonli.javafx.StackedFontIcon?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="-1" prefWidth="600.0"
            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.az.gitember.WorkingCopyController">
    <top>
        <ToolBar fx:id="toolBar" prefHeight="40.0" prefWidth="200.0">
            <items>
                <Button mnemonicParsing="false" text="Stage all"  fx:id="stageAllBtn" onAction="#stageAllBtnHandler"/>
                <Button mnemonicParsing="false" text="Commit ..."  fx:id="commitBtn" onAction="#commitBtnHandler"/>
                <Button mnemonicParsing="false" text="Stash"  fx:id="stashBtn" onAction="#stashBtnHandler"/>
                <Pane HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false"  fx:id="refreshBtn" onAction="#refreshBtnHandler">
                    <graphic>
                        <StackedFontIcon>
                            <FontIcon iconLiteral="fa-refresh" StackedFontIcon.iconSize="0.5"/>
                        </StackedFontIcon>
                    </graphic>
                </Button>
            </items>
        </ToolBar>

    </top>
    <center>
        <TableView fx:id="workingCopyTableView" onMouseClicked="#addItemToStageEventHandler" prefHeight="514.0"
                   prefWidth="500" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="selectTableColumn" style="-fx-border-width: 0;  -fx-padding: 0px 0px 0px 10px;" prefWidth="40.0"  text="" />
                <TableColumn fx:id="statusTableColumn" style="-fx-border-width: 0; -fx-font-size: 165%;  -fx-label-padding: 12px 0px 0px 5px;"  prefWidth="40.00" text="" />
                <TableColumn fx:id="itemTableColumn" style="-fx-border-width: 0;  -fx-label-padding: 12px 0px 0px 5px;" text="File"  prefWidth="-1" minWidth="800"/>
            </columns>

            <contextMenu>
                <ContextMenu fx:id="scmItemContextMenu">
                    <items>
                        <MenuItem fx:id="revertMenuItem" mnemonicParsing="false" text="Revert changes ..." onAction="#revertEventHandler"/>
                        <MenuItem fx:id="addFileMenuItem"  mnemonicParsing="false" text="Add item to stage" onAction="#addItemToStageMiEventHandler"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="openFileMenuItem"  mnemonicParsing="false" text="Open item" onAction="#openEventHandler"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="showHistoryMenuItem" mnemonicParsing="false" text="History of changes" onAction="#historyEventHandler"/>
                        <MenuItem fx:id="showDiffMenuItem" mnemonicParsing="false" text="Diff with the same version from repository" onAction="#diffEventHandler"/>
                    </items>
                </ContextMenu>
            </contextMenu>


        </TableView>
    </center>
</BorderPane>
